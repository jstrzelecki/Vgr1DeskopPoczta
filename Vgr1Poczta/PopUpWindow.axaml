<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        x:Class="Vgr1Poczta.PopUpWindow"
        Width="300"
        Height="150"
        CanResize="False"
        WindowStartupLocation="CenterScreen">
    <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center">
        <Label x:Name="InfoLabel" VerticalAlignment="Center" HorizontalAlignment="Center"/>
        <Button Content="OK" Click="CloseWindow" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Width="100"/>
    </StackPanel>
</Window>
